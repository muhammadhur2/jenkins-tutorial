pipeline {
    agent any 
    stages {
        stage('Checkout SCM') {
            steps {  
                git branch: 'main', credentialsId: 'github', url: 'https://github.com/muhammadhur2/kubernetes-tutorial.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    def imageName = "muhammadhur/tutorial:${env.BUILD_NUMBER}"
                    sh "docker build -t ${imageName} ."
                }
            }
        }
        stage('Push to DockerHub') {
            steps {
                script {
                    def imageName = "muhammadhur/tutorial:${env.BUILD_NUMBER}"
                    withCredentials([usernamePassword(credentialsId: 'dockerhub', usernameVariable: 'DOCKERHUB_USER', passwordVariable: 'DOCKERHUB_PASS')]) {
                        sh "docker login -u $DOCKERHUB_USER -p $DOCKERHUB_PASS docker.io"
                        sh "docker push ${imageName}"
                        sh "docker logout"
                    }
                }
            }
        }
        stage('Deploy to Kubernetes') {
            steps {
                script {
                    def imageName = "muhammadhur/tutorial:${env.BUILD_NUMBER}"

                    // Update the image in the deployment file
                    sh "sed -i 's|muhammadhur/tutorial:latest|${imageName}|' ./deployment.yaml"

                    // Use Publish Over SSH to copy the file and execute the command
                    sshPublisher(publishers: [
                        sshPublisherDesc(
                            configName: "pipeline {
    agent any 
    stages {
        stage('Checkout SCM') {
            steps {  
                git branch: 'main', credentialsId: 'github', url: 'https://github.com/muhammadhur2/kubernetes-tutorial.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    def imageName = "muhammadhur/tutorial:${env.BUILD_NUMBER}"
                    sh "docker build -t ${imageName} ."
                }
            }
        }
        stage('Push to DockerHub') {
            steps {
                script {
                    def imageName = "muhammadhur/tutorial:${env.BUILD_NUMBER}"
                    withCredentials([usernamePassword(credentialsId: 'dockerhub', usernameVariable: 'DOCKERHUB_USER', passwordVariable: 'DOCKERHUB_PASS')]) {
                        sh "docker login -u $DOCKERHUB_USER -p $DOCKERHUB_PASS docker.io"
                        sh "docker push ${imageName}"
                        sh "docker logout"
                    }
                }
            }
        }
        stage('Deploy to Kubernetes') {
            steps {
                script {
                    def imageName = "muhammadhur/tutorial:${env.BUILD_NUMBER}"

                    // Update the image in the deployment file
                    sh "sed -i 's|muhammadhur/tutorial:latest|${imageName}|' ./deployment.yaml"

                    // Use Publish Over SSH to copy the file and execute the command
                    sshPublisher(publishers: [
                        sshPublisherDesc(
                            configName: "final-project",
                            transfers: [
                                sshTransfer(
                                    sourceFiles: "deployment.yaml",  // directly in the workspace root
                                    remoteDirectory: ".",  // Place directly in the specified remote directory
                                    execCommand: "kubectl apply -f ./deployment.yaml"  // Execute command in the remote directory
                                )
                            ]
                        )
                    ])
                }
            }
        }
    }
}
",
                            transfers: [
                                sshTransfer(
                                    sourceFiles: "deployment.yaml",  // directly in the workspace root
                                    remoteDirectory: ".",  // Place directly in the specified remote directory
                                    execCommand: "kubectl apply -f ./deployment.yaml"  // Execute command in the remote directory
                                )
                            ]
                        )
                    ])
                }
            }
        }
    }
}
