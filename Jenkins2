pipeline {
    agent any 
    stages {
        stage('Checkout SCM') {
            steps {  
                git branch: 'main', credentialsId: 'github', url: 'https://github.com/muhammadhur2/kubernetes-tutorial.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    def imageName = "muhammadhur/tutorial:${env.BUILD_NUMBER}"
                    sh "docker build -t ${imageName} ."
                }
            }
        }
        stage('Push to DockerHub') {
            steps {
                script {
                    def imageName = "muhammadhur/tutorial:${env.BUILD_NUMBER}"
                    withCredentials([usernamePassword(credentialsId: 'dockerhub', usernameVariable: 'DOCKERHUB_USER', passwordVariable: 'DOCKERHUB_PASS')]) {
                        sh "docker login -u $DOCKERHUB_USER -p $DOCKERHUB_PASS docker.io"
                    }
                    sh "docker push ${imageName}"
                    sh "docker logout"
                }
            }
        }
        stage('Deploy to Kubernetes') {
            steps {
                script {
                    def imageName = "muhammadhur/tutorial:${env.BUILD_NUMBER}"
                    def serverIP = "52.146.33.247"
                    def adminUser = "useradmin"
                    def adminPass = "@@La12345678##"

                    // Update the image in the deployment file
                    sh "sed -i 's|muhammadhur/tutorial:latest|${imageName}|' ./deployment.yaml"

                    // SCP the updated deployment file to the server
                    withCredentials([usernamePassword(credentialsId: 'server-ssh', usernameVariable: 'SSH_USER', passwordVariable: 'SSH_PASS')]) {
                        sh "scp -o StrictHostKeyChecking=no ./deployment.yaml ${SSH_USER}@${serverIP}:/path/to/deployment"
                    }

                    // SSH into the server and deploy using kubectl
                    sh "ssh -o StrictHostKeyChecking=no ${SSH_USER}@${serverIP} 'kubectl apply -f /path/to/deployment/deployment.yaml'"
                }
            }
        }
    }
}
